<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="toolbarType"
            type="com.roix.mvvm_archtecture_sample.ui.common.view.ToolbarType" />


        <variable
            name="viewmodel"
            type="com.roix.mvvm_archtecture_sample.ui.main.viewmodels.MainViewModel"/>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:toolbarType="@{toolbarType}"
            />
        <TextView
            android:id="@+id/tvTest"
            android:text="@{viewmodel.requestTestObservableField}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</layout>